<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/album_art_blurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorAccent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mini_player_height"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/player_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mini_player_height"
                android:layout_marginTop="0dp"
                android:alpha="1.0"
                android:background="#00000000"
                android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/down"
                    android:layout_width="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="13.5dp"
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/down_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:text="@string/icon_arrow_down"
                        android:textStyle="bold"
                        tools:ignore="MissingPrefix"
                        fontPath="FontAwesome.otf"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>



                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_large" />


                <LinearLayout
                    android:id="@+id/close"
                    android:layout_width="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:gravity="left|center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/close_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_close"
                        android:textStyle="bold"
                        tools:ignore="MissingPrefix"
                        fontPath="FontAwesome.otf"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mini_player"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mini_player_height"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="invisible">


                <include android:id="@+id/mini_player_layout"
                    layout="@layout/view_mini_player" />


            </RelativeLayout>
        </FrameLayout>

        <com.flipboard.bottomsheet.BottomSheetLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <include layout="@layout/view_full_player" />

        </com.flipboard.bottomsheet.BottomSheetLayout>


    </LinearLayout>
</RelativeLayout>

