<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/slider_header_bg" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="33dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/slider_header_logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/picture2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/icon_user_circle"
            android:textStyle="bold"
            tools:ignore="MissingPrefix"
            fontPath="FontAwesome.otf"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture1"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_anonymou"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp" />



        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="علاء الدين خودي"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

    </LinearLayout>

</RelativeLayout>
